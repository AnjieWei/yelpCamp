<% layout('./layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds" method="post" nonvalidate class="needs-validation" enctype="multipart/form-data">   
            <div class="mb-3">
                <label class="form-label" for="name">Name: </label>
                <input class="form-control" type="text" name="campground[name]" id="name" required>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="location">Location: </label>
                <input class="form-control" type="text" name="campground[location]" id="location" required>
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Campground Price: </label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" class="form-control" name="campground[price]" id="price" placeholder="0.00" required>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="image" class="form-label">Image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description: </label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" required></textarea>
            </div>

            <button class="mb-3 btn btn-success" type="submit">New Campground</button>
        </form>
        <a href="/campgrounds">Return to all</a>
    </div>    
</div>
